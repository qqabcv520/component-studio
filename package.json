{
  "private": true,
  "name": "component-studio",
  "description": "组件工作室",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace component-studio-ui run start",
    "build": "yarn workspace component-studio-ui run build",
    "prettier": "prettier --write \"packages/*/src/**/*\""
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "prettier": "^1.19.1"
  }
}
