{
  "private": true,
  "name": "component-studio",
  "description": "组件工作室",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettier": "prettier --write 'packages/**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "yorkie": "^2.0.0"
  }
}
